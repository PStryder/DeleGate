# DeleGate Environment Configuration

# Server
DELEGATE_HOST=0.0.0.0
DELEGATE_PORT=8000
DELEGATE_DEBUG=false
DELEGATE_RELOAD=false

# Instance ID
DELEGATE_INSTANCE_ID=delegate-1

# Database
DELEGATE_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/delegate
DELEGATE_SQL_ECHO=false

# Integration URLs
DELEGATE_MEMORYGATE_URL=http://localhost:8001
DELEGATE_ASYNCGATE_URL=http://localhost:8002

# Planning limits
DELEGATE_MAX_PLAN_STEPS=20
DELEGATE_PLANNING_TIMEOUT_SECONDS=30

# Worker registry
DELEGATE_CAPABILITY_CACHE_TTL_SECONDS=600
DELEGATE_WORKER_HEALTH_CHECK_INTERVAL_SECONDS=60

# Trust configuration
DELEGATE_DEFAULT_TRUST_TIER=verified
DELEGATE_ALLOW_UNTRUSTED_WORKERS=false
DELEGATE_REQUIRE_SIGNATURES_PRODUCTION=false

# CORS
DELEGATE_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Multi-tenancy
DELEGATE_DEFAULT_TENANT_ID=default

# Authentication
# API key for REST endpoint authentication (use dg_ prefix by convention)
DELEGATE_API_KEY=dg_your-secret-api-key-here

# Allow insecure dev mode - ONLY for local development
DELEGATE_ALLOW_INSECURE_DEV=false

# Observability
DELEGATE_ENABLE_METRICS=false
DELEGATE_METRICS_PORT=9090
